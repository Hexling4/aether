<form class="{{cssClass}}" autocomplete="off">
    <header class="sheet-header">
        <img class="profile-img" src="{{item.img}}" data-edit="img" title="{{item.name}}"/>
        <div class="header-fields">
            <h1 class="charname"><input name="name" type="text" value="{{item.name}}" placeholder="Name"/></h1>
            <div class="grid grid-2col">
              <div class="resource">
                <label class="resource-label">Level</label>
                  <input type="number" name="data.value" value="{{data.value}}" data-dtype="Number"/>
              </div>
              <div class="resource">
                <label class="resource-label">Ability</label>
                    <select class="flexrow" name="data.ability">
                    {{#select data.ability}}
                    {{#each config.abilityTypes as |name type|}}
                        <option value="{{type}}">{{name}}</option>
                    {{/each}}
                    {{/select}}
                    </select>
              </div>
            </div>
            <div class="grid grid-3col">
                <div class="resource flexcol">
                    <label class="resource-label">Mobility</label>
                    <input class="actor-check" data-field="data.mobility" value="{{data.mobility}}" type="checkbox" name="data.mobility" {{checked data.mobility}}/>
                </div>
                <div class="resource flexcol">
                    <label class="resource-label">Pain</label>
                    <input class="actor-check" data-field="data.pain" value="{{data.pain}}" type="checkbox" name="data.pain" {{checked data.pain}}/>
                </div>
                <div class="resource flexcol">
                    <label class="resource-label">Token</label>
                    <input class="actor-check" data-field="data.token" value="{{data.token}}" type="checkbox" name="data.token" {{checked data.token}}/>
                </div>
            </div>
        </div>
    </header>

    {{!-- Sheet Tab Navigation --}}
    <nav class="sheet-tabs tabs" data-group="primary">
        <a class="item" data-tab="description">Description</a>
        <a class="item" data-tab="attributes">Attributes</a>
    </nav>

    {{!-- Sheet Body --}}
    <section class="sheet-body">

        {{!-- Description Tab --}}
        <div class="tab" data-group="primary" data-tab="description">
            {{editor content=data.description target="data.description" button=true owner=owner editable=editable}}
        </div>

        {{!-- Attributes Tab --}}
        <div class="tab attributes" data-group="primary" data-tab="attributes">
            {{!-- As you add new fields, add them in here! --}}
        </div>
    </section>
</form>